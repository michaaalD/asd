#include <stdio.h>

int main() {
    FILE *file;
    char haslo[100]; // Tablica na co trzeci element
    char user[100]; // Tablica na co czwarty element
    int i = 0;
    int count = 0; // Licznik elementów

    file = fopen("dane.txt", "r"); // Otwieramy plik do odczytu
    if (file == NULL) {
        printf("Nie można otworzyć pliku.\n");
        return 1;
    }

    while (!feof(file) && i < 100) {
        char value[100];
        fscanf(file, "%s", value); // Wczytujemy dane z pliku
        if (count % 3 == 0) {
            strcpy(haslo[i], value); // Zapisujemy co trzeci element do tablicy haslo
        } else if (count % 4 == 0) {
            strcpy(user[i], value); // Zapisujemy co czwarty element do tablicy user
            i++;
        }
        count++;
    }

    fclose(file); // Zamykamy plik

    // Wyświetlamy zawartość tablic haslo i user
    printf("Elementy tablicy haslo:\n");
    for (int j = 0; j < i; j++) {
        printf("%s\n", haslo[j]);
    }

    printf("\nElementy tablicy user:\n");
    for (int j = 0; j < i; j++) {
        printf("%s\n", user[j]);
    }

    return 0;
}
